<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/nameAlbumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coverImageView"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:typeface="roboto_bold" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/artistAlbumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameAlbumTextView"
                app:typeface="roboto_regular" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/yearAndLabelTrackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/artistAlbumTextView"
                android:textColor="#8a212224"
                android:textSize="12sp"
                app:typeface="roboto_regular" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>